<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">true</item>
        <item name="android:statusBarColor">@color/white</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!--        <item name="android:textViewStyle">@style/MyTextView</item>-->

    </style>

    <style name="Toolbar">
        <item name="android:fontFamily">@font/avenirnext_demibold</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>


    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyEditTextHint">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
<!--        <item name="android:fontFamily">@font/avenirnext_demibolditalic</item>-->
        <!--        <item name="android:textSize">@dimen/text_size_16sp</item>-->
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
<!--        <item name="android:includeFontPadding">false</item>-->
    </style>

    <style name="MyTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/avenirnext_demibold</item>
    </style>


    <style name="MyProgressButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/scale_16dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/_7sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/avenirnext_demibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="android:lineSpacingExtra">@dimen/_4ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_sheet</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">7dp</item>
        <item name="background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="topRoundCorners" parent="">
        <item name="cornerFamily">rounded</item>
       <item name="cornerSizeTopLeft">@dimen/scale_20dp</item>
       <item name="cornerSizeTopRight">@dimen/scale_20dp</item>
    </style>

    <style name="WeekInitialsStyle">
        <item name="android:layout_width">@dimen/scale_35dp</item>
        <item name="android:layout_height">@dimen/scale_35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>




    <style name="ToolbarStyleCall" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="RoundedImageButton">
        <item name="android:layout_width">@dimen/scale_64dp</item>
        <item name="android:layout_height">@dimen/scale_64dp</item>
        <item name="android:padding">@dimen/scale_16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="SeekBarPreferenceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MonthTextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/avenirnext_demibold</item>
        <item name="android:textColor">@color/colorPrimary</item>
<!--        <item name="background">@drawable/rounded_rectangle</item>-->
<!--        <item name="android:backgroundTint">@color/lightBlue</item>-->
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_7sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/scale_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>