<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homeScreen.bottomNavigation.taskModule.childFragment.AllTasksFragment"
        android:background="@color/backgroundBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/noDataLayout"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_activities_available"
                android:textSize="@dimen/text_size_20sp"
                android:fontFamily="@font/avenirnext_medium"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recViewLayout"
            android:orientation="vertical"
            android:background="@color/backgroundBlue"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="3"
                tools:listitem="@layout/task_details_card_layout"
                android:layout_marginStart="@dimen/scale_20dp"
                android:layout_marginEnd="@dimen/scale_20dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:secondaryProgressTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>



</layout>

