<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_80dp"
        android:id="@+id/parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toStartOf="@id/secondLayout"
            android:layout_marginStart="@dimen/scale_20dp"
            android:layout_marginEnd="33dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.example.sameteam.widget.CircleImageView
                    android:layout_width="@dimen/scale_40dp"
                    android:layout_height="@dimen/scale_40dp"
                    android:id="@+id/profileImage"
                    android:src="@drawable/profile_photo"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="@dimen/scale_10dp"
                    android:layout_height="@dimen/scale_10dp"
                    android:src="@drawable/ic_online"
                    android:background="@drawable/status_border"
                    android:id="@+id/onlineStatus"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="31dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/initials"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/scale_40dp"
                    android:background="@drawable/circle_background_event"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:text="ST"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/scale_15dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Name"
                    android:id="@+id/name"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:fontFamily="@font/avenirnext_demibold"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/message"
                    tools:text="message"
                    android:layout_marginTop="2dp"
                    android:textSize="@dimen/text_size_13sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:fontFamily="@font/avenirnext_regular"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/secondLayout"
            android:layout_marginEnd="@dimen/scale_20dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="time"
                android:id="@+id/time"
                android:textSize="@dimen/text_size_12sp"
                android:fontFamily="@font/avenirnext_medium" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@{Integer.toString(model.count)}"-->
<!--                android:id="@+id/count"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:textSize="@dimen/text_size_10sp"-->
<!--                android:background="@drawable/circle_background_chat"-->
<!--                android:backgroundTint="@color/colorPrimary"-->
<!--                android:textColor="@color/white"-->
<!--                android:gravity="center"-->
<!--                android:visibility="@{model.count > 0 ? View.VISIBLE : View.INVISIBLE}"/>-->

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_background_chat"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10sp"
                tools:text="3"
                android:visibility="gone"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorInactive"/>

    </RelativeLayout>

</layout>

