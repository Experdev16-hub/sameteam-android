<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/scale_17dp"
            android:paddingStart="@dimen/scale_16dp"
            android:paddingBottom="@dimen/scale_16dp"
            tools:ignore="RtlSymmetry">

            <RelativeLayout
                android:id="@+id/iconLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

<!--                <TextView-->
<!--                    android:id="@+id/monthName"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_marginTop="@dimen/scale_3dp"-->
<!--                    android:fontFamily="@font/avenirnext_medium"-->
<!--                    android:includeFontPadding="false"-->
<!--                    android:text="May"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/text_size_12sp" />-->

<!--                <TextView-->
<!--                    android:id="@+id/date"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/monthName"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_marginTop="-5dp"-->
<!--                    android:layout_marginBottom="-5dp"-->
<!--                    android:fontFamily="@font/avenirnext_demibold"-->
<!--                    android:includeFontPadding="false"-->
<!--                    android:text="10"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/text_size_16sp" />-->

                <ImageView
                    android:id="@+id/thumbImage"
                    android:layout_width="@dimen/scale_30dp"
                    android:layout_height="@dimen/scale_30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification_check" />

                <RelativeLayout
                    android:layout_width="@dimen/scale_30dp"
                    android:layout_height="@dimen/scale_30dp"
                    android:id="@+id/bellLayout"
                    android:background="@drawable/circle_background_notification">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_bell" />

                </RelativeLayout>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/iconLayout"
                android:layout_toStartOf="@id/time"
                android:id="@+id/messageLayout"
                android:layout_marginStart="@dimen/scale_13dp"
                android:layout_marginEnd="@dimen/scale_15dp">

                <RelativeLayout
                    android:id="@+id/messageLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_notification_card"
                    android:padding="@dimen/scale_15dp">

                    <TextView
                        android:id="@+id/taskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenirnext_medium"
                        android:includeFontPadding="false"
                        android:text="Task Title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/taskDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/taskName"
                        android:layout_marginTop="@dimen/scale_3dp"
                        android:fontFamily="@font/avenirnext_regular"
                        android:includeFontPadding="false"
                        android:text="Task Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/taskTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/taskDate"
                        android:layout_marginTop="@dimen/scale_3dp"
                        android:fontFamily="@font/avenirnext_regular"
                        android:includeFontPadding="false"
                        android:text="Task Time"
                        android:textColor="#45464d"
                        android:textSize="@dimen/text_size_14sp" />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/messageLayout2"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:layout_marginStart="@dimen/scale_3dp"
                    android:layout_marginEnd="@dimen/scale_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/accept"
                        android:text="@string/accept"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="#484e66"
                        android:fontFamily="@font/avenirnext_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/decline"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decline"
                        android:id="@+id/decline"
                        android:textColor="#484e66"
                        android:fontFamily="@font/avenirnext_medium"
                        android:textSize="@dimen/text_size_14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/accept"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/avenirnext_medium"
                android:paddingEnd="@dimen/scale_14dp"
                android:text="time"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />


        </RelativeLayout>

    </RelativeLayout>
</layout>
