<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout
        style="@style/RootLayout"
        tools:context=".homeScreen.bottomNavigation.userDirectoryModule.AllUsersFragment">

        <LinearLayout
            android:id="@+id/noDataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirnext_medium"
                android:text="@string/no_users_available"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSearch"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/scale_16dp"
            android:layout_marginBottom="@dimen/scale_18dp"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="center"
            android:visibility="visible"
            app:fabCustomSize="46dp"
            app:maxImageSize="@dimen/scale_35dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@android:color/white" />

        <LinearLayout
            android:id="@+id/recViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/scale_20dp"
            android:layout_marginEnd="@dimen/scale_20dp"
            android:layout_marginBottom="@dimen/scale_65dp"
            android:orientation="vertical"
            tools:context=".homeScreen.bottomNavigation.chatModule.ChatFragment">

            <include
                android:id="@+id/searchLayout"
                layout="@layout/search_contact_layout"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/userRecView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:itemCount="5"
                tools:listitem="@layout/all_users_list_layout"
                tools:visibility="gone" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:secondaryProgressTint="@color/colorPrimary"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/txtUserNotFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/recViewLayout"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/search_with_email"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

</layout>
