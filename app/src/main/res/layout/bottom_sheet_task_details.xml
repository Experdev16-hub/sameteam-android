<!--                            app:layout_constraintBottom_toBottomOf="parent"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toEndOf="@id/repeatIcon"-->
<!--                            app:layout_constraintTop_toTopOf="parent" />-->

<!--                    </androidx.constraintlayout.widget.ConstraintLayout>-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/slot_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_20dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/slotsIcon"
                            android:layout_width="@dimen/scale_30dp"
                            android:layout_height="@dimen/scale_30dp"
                            android:background="@drawable/icon_background"
                            android:paddingLeft="@dimen/scale_8dp"
                            android:paddingTop="@dimen/scale_6dp"
                            android:paddingRight="@dimen/scale_8dp"
                            android:paddingBottom="@dimen/scale_6dp"
                            android:src="@drawable/ic_users_selected"
                            app:layout_constraintBottom_toBottomOf="@id/txtSlots"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/txtSlots"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/txtSlots"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/scale_10dp"
                            android:fontFamily="@font/avenirnext_medium"
                            android:textColor="@color/darkGrey"
                            android:textSize="@dimen/text_size_16sp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/slotsIcon"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/activity_creator_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenirnext_medium"
                            android:includeFontPadding="false"
                            android:text="@string/created_by"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:id="@+id/textActivityCreator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_7dp"
                            android:fontFamily="@font/avenirnext_regular"
                            android:includeFontPadding="false"
                            android:text="User Name"
                            android:textColor="@color/darkGrey"
                            android:textSize="@dimen/text_size_16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/participant_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_30dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenirnext_medium"
                            android:includeFontPadding="false"
                            android:text="@string/people_invited"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/scale_12dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/scale_12dp"
                                android:nestedScrollingEnabled="false"
                                android:layout_toLeftOf="@id/arrowNext"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/participants_event_details_card" />

                            <ImageView
                                android:id="@+id/arrowNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/ic_round_arrow_forward" />
                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_30dp"
                        android:fontFamily="@font/avenirnext_medium"
                        android:includeFontPadding="false"
                        android:text="@string/notification"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/txtReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_7dp"
                        android:fontFamily="@font/avenirnext_regular"
                        android:includeFontPadding="false"
                        android:text="@string/dont_remind"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/text_size_16sp" />

                    <LinearLayout
                        android:id="@+id/invitationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/avenirnext_medium"
                            android:includeFontPadding="false"
                            android:text="@string/going"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/btnAccept"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/scale_15dp"
                                android:background="@drawable/rounded_rectangle"
                                android:backgroundTint="@color/white"
                                android:fontFamily="@font/avenirnext_regular"
                                android:paddingStart="@dimen/scale_11dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:paddingEnd="@dimen/scale_11dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:text="@string/accept"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/btnDecline"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!--                            <TextView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:id="@+id/btnMaybe"-->
                            <!--                                android:text="@string/maybe"-->
                            <!--                                android:textSize="@dimen/text_size_14sp"-->
                            <!--                                android:fontFamily="@font/avenirnext_regular"-->
                            <!--                                android:textColor="@color/black"-->
                            <!--                                app:layout_constraintEnd_toStartOf="@id/btnDecline"-->
                            <!--                                app:layout_constraintTop_toTopOf="parent"-->
                            <!--                                app:layout_constraintBottom_toBottomOf="parent"-->
                            <!--                                android:layout_marginEnd="@dimen/scale_15dp"/>-->

                            <TextView
                                android:id="@+id/btnDecline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_rectangle"
                                android:backgroundTint="@color/white"
                                android:fontFamily="@font/avenirnext_regular"
                                android:paddingStart="@dimen/scale_11dp"
                                android:paddingTop="@dimen/scale_5dp"
                                android:paddingEnd="@dimen/scale_11dp"
                                android:paddingBottom="@dimen/scale_5dp"
                                android:text="@string/decline"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/contactLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_25dp">

                        <ImageView
                            android:id="@+id/btnChat"
                            android:layout_width="@dimen/scale_70dp"
                            android:layout_height="@dimen/scale_70dp"
                            android:layout_centerInParent="true"
                            android:elevation="@dimen/scale_5dp"
                            android:src="@drawable/round_chat" />

                        <ImageView
                            android:id="@+id/btnAudioCall"
                            android:layout_width="@dimen/scale_70dp"
                            android:layout_height="@dimen/scale_70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="21dp"
                            android:layout_toStartOf="@id/btnChat"
                            android:elevation="@dimen/scale_3dp"
                            android:src="@drawable/round_phone" />

                        <ImageView
                            android:id="@+id/btnVideoCall"
                            android:layout_width="@dimen/scale_70dp"
                            android:layout_height="@dimen/scale_70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="21dp"
                            android:layout_toEndOf="@id/btnChat"
                            android:elevation="@dimen/scale_3dp"
                            android:src="@drawable/round_video" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignup"
                style="@style/MyProgressButton"
                android:layout_marginStart="@dimen/scale_20dp"
                android:layout_marginEnd="@dimen/scale_20dp"
                android:layout_marginBottom="@dimen/scale_10dp"
                android:text="@string/sign_up"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:secondaryProgressTint="@color/colorPrimary"
            android:visibility="gone" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
