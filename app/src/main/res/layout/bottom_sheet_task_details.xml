            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/taskImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/task_image_placeholder"
                app:layout_constraintBottom_toTopOf="@+id/scrollView"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/topRoundCorners" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@id/btnSignup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskImage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/scale_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/taskName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/avenirnext_demibold"
                            android:includeFontPadding="false"
                            android:text="Design Team Meeting"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_20sp" />

                        <ImageView
                            android:id="@+id/btnPopupMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/scale_10dp"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:src="@drawable/ic_more_vertical"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/teamNames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_17dp"
                        android:fontFamily="@font/avenirnext_demibold"
                        android:text="Teams:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_13sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/eventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_15dp"
                        android:fontFamily="@font/avenirnext_regular"
                        android:text="Event 1"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_15dp"
                        android:fontFamily="@font/avenirnext_regular"
                        android:text="Daily updates, Requirements discussion, Design brainstorming"
                        android:textColor="@color/darkGrey"
                        android:textSize="@dimen/text_size_14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_24dp">

                        <ImageView
                            android:id="@+id/iconCal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_calendar_event" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/scale_10dp"
                            android:layout_toEndOf="@+id/iconCal"
                            android:fontFamily="@font/avenirnext_medium"
                            android:text="Wednesday, 12:00 AM â€” 01:00 PM"
                            android:textColor="@color/darkGrey"
                            android:textSize="@dimen/text_size_16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/locationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_20dp">

                        <ImageView
                            android:id="@+id/iconLoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_location_green" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/scale_10dp"
                            android:layout_toEndOf="@+id/iconLoc"
                            android:fontFamily="@font/avenirnext_medium"
                            android:text="Bangalore, Karnataka"
                            android:textColor="@color/darkGrey"
                            android:textSize="@dimen/text_size_16sp" />

                    </RelativeLayout>

<!--                    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                        android:layout_width="match_parent"-->
