<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <variable
            name="model"
            type="com.example.sameteam.authScreens.model.UserModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/scale_8dp"
            android:paddingEnd="@dimen/scale_8dp"
            android:paddingBottom="@dimen/scale_13dp"
            android:paddingTop="@dimen/scale_13dp"
            android:background="@drawable/border_grey_rectangle_background">

            <com.example.sameteam.widget.CircleImageView
                android:layout_width="@dimen/scale_24dp"
                android:layout_height="@dimen/scale_24dp"
                android:id="@+id/imageView"
                loadProfilePicture="@{model.profile_picture}"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                participantName="@{model}"
                android:layout_toEndOf="@id/imageView"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/scale_6dp"
                android:fontFamily="@font/avenirnext_medium"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/darkGrey"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemove"
                android:src="@drawable/ic_cross"
                android:padding="@dimen/scale_5dp"
                android:layout_toEndOf="@id/name"
                android:layout_marginStart="@dimen/scale_12dp"
                android:layout_centerVertical="true"
                android:onClick="@{(v)->click.onClick(v)}"/>

        </RelativeLayout>

    </RelativeLayout>

</layout>

