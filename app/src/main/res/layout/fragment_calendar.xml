<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".homeScreen.bottomNavigation.calendarModule.CalendarFragment">

    <data>

    </data>

    <RelativeLayout style="@style/RootLayout"
        android:background="@color/backgroundBlue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendarLayout"
            android:background="@drawable/rounded_bottom_rectangle"
            android:elevation="@dimen/scale_10dp"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendarRangeLayout"
                android:paddingTop="@dimen/scale_7dp"
                android:background="#f7f7f7">

                <TextView
                    android:id="@+id/txtCalendarRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/avenirnext_demibold"
                    android:text="Activities I Signed Up For"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/text_size_18sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changeMonthLayout"
                android:background="#f7f7f7"
                android:layout_marginBottom="@dimen/scale_5dp"
                android:layout_below="@id/calendarRangeLayout"

                android:paddingTop="@dimen/scale_7dp"
                android:paddingBottom="@dimen/scale_7dp">

                <ImageView
                    android:id="@+id/exFivePreviousMonthImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scale_5dp"
                    android:layout_marginStart="@dimen/scale_18dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_chevron_left"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/exFiveMonthYearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/avenirnext_demibold"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/text_size_17sp"
                    tools:text="May 2020" />

                <ImageView
                    android:id="@+id/exFiveNextMonthImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scale_5dp"
                    android:layout_marginEnd="@dimen/scale_18dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_chevron_left"
                    android:rotation="180"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <include
                android:id="@+id/legendLayout"
                layout="@layout/calendar_day_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/scale_7dp"
                android:layout_below="@id/changeMonthLayout"/>

            <com.kizitonwose.calendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cv_orientation="horizontal"
                app:cv_dayViewResource="@layout/calendar_day_layout"
                app:cv_inDateStyle="allMonths"
                app:cv_outDateStyle="endOfRow"
                app:cv_scrollMode="paged"
                android:layout_marginStart="@dimen/scale_5dp"
                android:layout_marginEnd="@dimen/scale_5dp"
                android:layout_below="@id/legendLayout"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"/>

            <RelativeLayout
                android:id="@+id/expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarView">

                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/scale_10dp"
                    android:layout_marginBottom="@dimen/scale_11dp"
                    android:background="#dadef0" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/noDataLayout"
            android:visibility="gone"
            android:layout_below="@id/calendarLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_activities_available_me"
                android:textSize="@dimen/text_size_20sp"
                android:fontFamily="@font/avenirnext_medium"
                android:textColor="@color/black"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendarLayout"
            android:layout_marginStart="@dimen/scale_20dp"
            android:layout_marginEnd="@dimen/scale_20dp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/task_details_card_layout" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddTask"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/scale_16dp"
            android:layout_marginBottom="@dimen/scale_18dp"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="center"
            app:fabCustomSize="46dp"
            app:maxImageSize="@dimen/scale_35dp"
            app:srcCompat="@drawable/ic_add"
            app:tint="@android:color/white"
            android:visibility="gone"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:secondaryProgressTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone"/>


    </RelativeLayout>


</layout>

