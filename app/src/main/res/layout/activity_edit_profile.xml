                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_26dp"
                    android:hint="@string/title_optional"
                    android:theme="@style/MyEditTextHint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:maxLength="25"
                        android:text="@={viewModel.loginResponseModel.title}" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scale_26dp"
                    android:orientation="horizontal">

                    <com.example.sameteam.widget.ccp.CountryCodePicker
                        android:id="@+id/ccp_loadFullNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/scale_5dp"
                        android:layout_marginBottom="@dimen/scale_2dp"
                        android:background="@drawable/border_grey_rectangle_background"
                        android:gravity="center_vertical"
                        app:ccp_contentColor="@color/darkGrey"
                        app:ccp_countryPreference="us"
                        app:ccp_defaultNameCode="us"
                        app:ccp_hintExampleNumber="true"
                        app:ccp_textSize="@dimen/text_size_16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
