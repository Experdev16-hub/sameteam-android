<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/scale_10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/scale_15dp"
            android:paddingBottom="@dimen/scale_15dp"
            android:paddingStart="@dimen/scale_20dp"
            android:paddingEnd="@dimen/scale_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alertMessage"
            android:text="Are you sure you want change the information?"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/avenirnext_medium"
            android:textSize="@dimen/text_size_16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alertMessage">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/scale_12dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/avenirnext_medium"
                android:letterSpacing="0.00"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_16sp"
                app:cornerRadius="@dimen/scale_7dp"
                android:layout_marginTop="@dimen/scale_35dp"
                android:paddingTop="@dimen/scale_7dp"
                android:paddingBottom="@dimen/scale_7dp"
                android:includeFontPadding="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/btnConfirm"
                app:layout_constraintTop_toTopOf="@id/btnConfirm"
                app:layout_constraintEnd_toStartOf="@id/btnConfirm"
                android:layout_marginStart="@dimen/scale_12dp"
                android:fontFamily="@font/avenirnext_medium"
                android:letterSpacing="0.00"
                android:backgroundTint="@color/white"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_16sp"
                app:cornerRadius="@dimen/scale_7dp"
                android:paddingTop="@dimen/scale_7dp"
                android:paddingBottom="@dimen/scale_7dp"
                android:layout_marginEnd="@dimen/scale_17dp"
                android:includeFontPadding="false"
                android:textColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="@dimen/scale_2dp"/>

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/btnCancel"-->
<!--                android:text="@string/cancel"-->
<!--                android:textColor="@color/darkGrey"-->
<!--                android:fontFamily="@font/avenirnext_regular"-->
<!--                android:textSize="@dimen/text_size_16sp"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/btnConfirm"-->
<!--                app:layout_constraintTop_toTopOf="@id/btnConfirm"-->
<!--                app:layout_constraintEnd_toStartOf="@id/btnConfirm"-->
<!--                android:layout_marginEnd="@dimen/scale_17dp"/>-->


        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>