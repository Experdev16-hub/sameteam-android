<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/scale_7dp"
        android:layout_marginBottom="@dimen/scale_7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHeader"
            android:text="@string/today"
            android:background="@drawable/selected_date_background"
            android:paddingLeft="@dimen/scale_18dp"
            android:paddingRight="@dimen/scale_18dp"
            android:paddingTop="@dimen/scale_6dp"
            android:paddingBottom="@dimen/scale_6dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/avenirnext_medium"
            android:textColor="@color/darkGrey"
            android:backgroundTint="#D9E3F7"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</layout>
