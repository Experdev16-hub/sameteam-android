<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".onBoarding.OnBoardingActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboardingViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutOnboardingIndicators"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:id="@+id/layoutOnboardingIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnNext"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        style="@style/MyProgressButton"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/next"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/txtSkip"/>

    <TextView
        android:id="@+id/txtSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_26sdp"
        android:fontFamily="@font/avenirnext_medium"
        android:text="@string/skip"
        android:paddingVertical="@dimen/scale_5dp"
        android:paddingHorizontal="@dimen/scale_7dp"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/_12ssp" />


</RelativeLayout>