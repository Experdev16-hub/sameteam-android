<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/RootLayout"
        app:behavior_hideable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/rounded_sheet"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/scale_22dp"
            android:paddingTop="@dimen/scale_22dp"
            android:paddingEnd="@dimen/scale_22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_times"
                android:fontFamily="@font/avenirnext_demibold"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!--            <ImageView-->
            <!--                android:layout_width="@dimen/scale_25dp"-->
            <!--                android:layout_height="@dimen/scale_25dp"-->
            <!--                android:id="@+id/btnCross"-->
            <!--                android:src="@drawable/ic_cross"-->
            <!--                android:padding="@dimen/scale_5dp"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="@id/txtRepeat"-->
            <!--                app:layout_constraintBottom_toBottomOf="@id/txtRepeat"-->
            <!--                app:tint="@color/darkGrey" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/scale_40dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/scale_100dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtTimes"
                app:boxStrokeColor="@color/colorPrimary"
                app:hintTextColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/scale_7dp"
                android:layout_centerVertical="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:id="@+id/times"
                    android:inputType="number"
                    android:maxLength="3"
                    android:theme="@style/MyEditTextHint"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTimes"
                android:text="@string/times"
                android:fontFamily="@font/avenirnext_medium"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/edtTimes"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/scale_14dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="@dimen/scale_20dp"
            android:paddingEnd="@dimen/scale_20dp"
            android:layout_marginTop="@dimen/scale_40dp"
            android:layout_marginBottom="@dimen/scale_20dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/scale_50dp"
                android:layout_height="@dimen/scale_50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/border_grey_rectangle_background"
                android:backgroundTint="@color/lightBlue"
                android:src="@drawable/ic_chevron_left" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale_60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/scale_12dp"
                android:layout_toEndOf="@id/btnBack"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/avenirnext_demibold"
                android:letterSpacing="0.00"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_16sp"
                app:cornerRadius="@dimen/scale_7dp" />

        </RelativeLayout>


    </LinearLayout>

</layout>
