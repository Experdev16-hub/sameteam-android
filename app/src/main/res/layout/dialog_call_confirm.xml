<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/scale_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scale_15dp"
        android:layout_marginBottom="@dimen/scale_15dp"
        android:layout_marginStart="@dimen/scale_20dp"
        android:layout_marginEnd="@dimen/scale_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/btnCancel"-->
<!--                android:text="@string/cancel"-->
<!--                android:textColor="@color/darkGrey"-->
<!--                android:fontFamily="@font/avenirnext_regular"-->
<!--                android:textSize="@dimen/_14ssp"-->
<!--                android:layout_marginEnd="@dimen/scale_17dp"-->
<!--                android:gravity="center"/>-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/avenirnext_medium"
                android:letterSpacing="0.00"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp"
                app:cornerRadius="@dimen/scale_7dp"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="@dimen/scale_2dp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/scale_20dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/avenirnext_medium"
                android:letterSpacing="0.00"
                android:text="@string/voice_call"
                android:textAllCaps="false"
                android:textSize="@dimen/_14ssp"
                app:cornerRadius="@dimen/scale_7dp"
                android:paddingVertical="@dimen/_5sdp"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>