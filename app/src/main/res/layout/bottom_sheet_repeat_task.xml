<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/RootLayout"
        app:behavior_hideable="true"
        android:background="@drawable/rounded_sheet"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/scale_22dp"
            android:paddingTop="@dimen/scale_22dp"
            android:paddingEnd="@dimen/scale_22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repeat"
                android:id="@+id/txtRepeat"
                android:fontFamily="@font/avenirnext_demibold"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="@dimen/scale_25dp"
                android:layout_height="@dimen/scale_25dp"
                android:id="@+id/btnCross"
                android:src="@drawable/ic_cross"
                android:padding="@dimen/scale_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtRepeat"
                app:layout_constraintBottom_toBottomOf="@id/txtRepeat"
                app:tint="@color/darkGrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--            android:orientation="vertical"-->
<!--            android:id="@+id/recView"-->
<!--            tools:listitem="@layout/remind_me_card_layout"-->
<!--            tools:itemCount="5" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/scale_22dp"
            android:layout_marginEnd="@dimen/scale_22dp"
            android:layout_marginTop="@dimen/scale_12dp"
            android:id="@+id/btnNever">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/never"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/avenirnext_regular"
                android:textSize="@dimen/text_size_18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCustom"
            android:layout_marginTop="@dimen/scale_12dp"
            android:layout_marginStart="@dimen/scale_22dp"
            android:layout_marginEnd="@dimen/scale_22dp"
            android:layout_marginBottom="@dimen/scale_20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom"
                android:fontFamily="@font/avenirnext_medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left"
                android:rotation="180"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>


</layout>
