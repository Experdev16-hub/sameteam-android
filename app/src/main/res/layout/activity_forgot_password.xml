<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.sameteam.authScreens.viewModel.ForgotVM" />
    </data>

    <LinearLayout
        style="@style/RootLayout"
        android:orientation="vertical"
        tools:context=".authScreens.ForgotPasswordActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/scale_28dp"
            android:paddingTop="@dimen/scale_15dp"
            android:paddingEnd="@dimen/scale_28dp"
            android:paddingBottom="@dimen/scale_10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:paddingHorizontal="@dimen/scale_8dp"
                android:paddingVertical="@dimen/scale_6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirnext_demibold"
                android:text="@string/forgot_password_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/scale_20dp"
            android:paddingEnd="@dimen/scale_20dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/reset_password"-->
<!--                android:fontFamily="@font/avenirnext_demibold"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="@dimen/text_size_24sp"-->
<!--                android:lineSpacingExtra="6sp"-->
<!--                android:layout_marginStart="@dimen/scale_5dp"-->
<!--                android:gravity="start"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pass"
                android:fontFamily="@font/avenirnext_medium"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginTop="@dimen/scale_17dp"
                android:gravity="start"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address"
                android:theme="@style/MyEditTextHint"
                android:layout_marginTop="@dimen/scale_36dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:id="@+id/txtEmail"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/MyProgressButton"
                android:layout_marginTop="@dimen/scale_36dp"
                android:id="@+id/btnSend"
                android:text="@string/submit"/>

        </LinearLayout>

    </LinearLayout>

</layout>

