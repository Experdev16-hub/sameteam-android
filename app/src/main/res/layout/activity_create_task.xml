                                android:layout_width="@dimen/scale_50dp"
                                android:layout_height="@dimen/scale_50dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/border_blue_rectangle_background"
                                android:src="@drawable/ic_add"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/txtParticipants"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_toEndOf="@id/btnInvite"
                                android:fontFamily="@font/avenirnext_demibold"
                                android:paddingStart="@dimen/_10sdp"
