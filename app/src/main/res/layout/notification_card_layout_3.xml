<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingStart="@dimen/scale_16dp"
        android:paddingTop="@dimen/scale_16dp"
        android:paddingEnd="@dimen/scale_14dp"
        android:paddingBottom="@dimen/scale_16dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/thumbImage"
            android:layout_width="@dimen/scale_30dp"
            android:layout_height="@dimen/scale_30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notification_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andrew is accepted your task"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/avenirnext_medium"
            android:textColor="@color/black"
            android:id="@+id/message"
            android:layout_toEndOf="@id/thumbImage"
            android:layout_toStartOf="@id/time"
            android:layout_marginStart="@dimen/scale_18dp"
            android:layout_marginEnd="@dimen/scale_15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:text="08:45 PM"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/avenirnext_medium"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</layout>