<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/RootLayout"
        tools:context=".homeScreen.bottomNavigation.chatModule.activity.TeamDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/custom_toolbar"
                layout="@layout/toolbar" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:id="@+id/rootLayout"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/scale_200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/task_image_placeholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/scale_20dp"
                        android:layout_marginEnd="@dimen/scale_20dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_15dp">

                            <TextView
                                android:id="@+id/teamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/avenirnext_demibold"
                                android:includeFontPadding="false"
                                android:text="Task Name"
                                android:textColor="@color/darkGrey"
                                android:textSize="@dimen/text_size_24sp" />

                            <ImageView
                                android:id="@+id/btnPopupMenu"
                                android:layout_width="@dimen/scale_25dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/scale_8dp"
                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:src="@drawable/ic_more_vertical"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/teamDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_5dp"
                            android:fontFamily="@font/avenirnext_regular"
                            android:includeFontPadding="false"
                            android:text="A nice description goes here."
                            android:textColor="@color/darkGrey"
                            android:textSize="@dimen/text_size_16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/imagesLayout"
                            android:layout_marginTop="@dimen/scale_20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenirnext_medium"
                                android:includeFontPadding="false"
                                android:text="@string/media_docs"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/imageRecView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="1"
                                tools:listitem="@layout/media_card_layout"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_20dp"
                            android:fontFamily="@font/avenirnext_medium"
                            android:text="@string/people_in_team"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16sp" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/usersRecView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_15dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="6"
                            tools:listitem="@layout/user_directory_card_layout" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/scale_10dp"
                android:layout_marginStart="@dimen/scale_20dp"
                android:layout_marginEnd="@dimen/scale_20dp"
                android:layout_marginTop="@dimen/scale_10dp"
                android:gravity="center_horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/MyProgressButton"
                    android:id="@+id/btnSave"
                    android:text="@string/leave_team"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:secondaryProgressTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>

</layout>

