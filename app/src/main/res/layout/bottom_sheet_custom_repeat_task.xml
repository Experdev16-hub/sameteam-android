<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="true"
            android:background="@drawable/rounded_sheet"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/scale_22dp"
                android:paddingTop="@dimen/scale_22dp"
                android:paddingEnd="@dimen/scale_22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_repeat"
                    android:id="@+id/txtRepeat"
                    android:fontFamily="@font/avenirnext_demibold"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!--            <ImageView-->
                <!--                android:layout_width="@dimen/scale_25dp"-->
                <!--                android:layout_height="@dimen/scale_25dp"-->
                <!--                android:id="@+id/btnCross"-->
                <!--                android:src="@drawable/ic_cross"-->
                <!--                android:padding="@dimen/scale_5dp"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintTop_toTopOf="@id/txtRepeat"-->
                <!--                app:layout_constraintBottom_toBottomOf="@id/txtRepeat"-->
                <!--                app:tint="@color/darkGrey" />-->


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repeat_every"
                android:fontFamily="@font/avenirnext_medium"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/scale_22dp"
                android:layout_marginEnd="@dimen/scale_22dp"
                android:layout_marginTop="@dimen/scale_20dp"/>


            <NumberPicker
                android:id="@+id/wheelPicker"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/scale_150dp"
                android:background="@color/white"
                aigestudio:wheel_atmospheric="true"
                aigestudio:wheel_curved="false"
                aigestudio:wheel_cyclic="false"
                aigestudio:wheel_item_text_color="@color/black"
                aigestudio:wheel_item_text_size="@dimen/text_size_18sp"
                app:wheel_visible_item_count="3"
                aigestudio:wheel_selected_item_text_color="@color/colorPrimary"/>
                

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weekLayout"
                        android:layout_marginStart="@dimen/scale_22dp"
                        android:layout_marginEnd="@dimen/scale_22dp"
                        android:layout_marginTop="@dimen/scale_20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/repeatOn"
                            android:text="@string/repeat_on"
                            android:fontFamily="@font/avenirnext_medium"
                            android:textSize="@dimen/text_size_18sp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/repeatOn"
                            android:layout_marginTop="@dimen/scale_16dp">

                            <TextView
                                android:id="@+id/sun"
                                android:text="@string/s"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/mon"
                                android:text="@string/m"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toEndOf="@id/sun"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/tue"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/tue"
                                android:text="@string/t"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toEndOf="@id/mon"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/wed"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/wed"
                                android:text="@string/w"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toEndOf="@id/tue"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/thu"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/thu"
                                android:text="@string/t"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toEndOf="@id/wed"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/fri"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/fri"
                                android:text="@string/f"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toEndOf="@id/thu"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/sat"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>

                            <TextView
                                android:id="@+id/sat"
                                android:text="@string/s"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:background="@drawable/border_grey_rectangle_background"
                                android:backgroundTint="@color/lightBlue"
                                style="@style/WeekInitialsStyle"
                                android:tag="0"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/monthLayout"
                        android:layout_marginStart="@dimen/scale_22dp"
                        android:layout_marginEnd="@dimen/scale_22dp"
                        android:layout_marginTop="@dimen/scale_20dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat_monthly_on"
                            android:fontFamily="@font/avenirnext_medium"
                            android:textSize="@dimen/text_size_18sp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/monthRepeatDate"
                            android:text="@string/choose_date"
                            android:fontFamily="@font/avenirnext_demibold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18sp"
                            android:gravity="center_vertical|end"
                            android:includeFontPadding="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/yearLayout"
                        android:layout_marginStart="@dimen/scale_22dp"
                        android:layout_marginEnd="@dimen/scale_22dp"
                        android:layout_marginTop="@dimen/scale_20dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat_yearly_on"
                            android:fontFamily="@font/avenirnext_medium"
                            android:textSize="@dimen/text_size_18sp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/yearRepeatDate"
                            android:text="@string/choose_date"
                            android:fontFamily="@font/avenirnext_demibold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18sp"
                            android:gravity="center_vertical|end"
                            android:includeFontPadding="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ends"
                            android:fontFamily="@font/avenirnext_medium"
                            android:textSize="@dimen/text_size_18sp"
                            android:textColor="@color/black"
                            android:paddingStart="@dimen/scale_22dp"
                            android:paddingEnd="@dimen/scale_22dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_11dp"
                            android:id="@+id/btnNever"
                            android:background="@color/lightBlue">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtNever"
                                android:text="@string/never"
                                android:fontFamily="@font/avenirnext_demibold"
                                android:textSize="@dimen/text_size_16sp"
                                android:textColor="@color/colorPrimary"
                                android:paddingStart="@dimen/scale_22dp"
                                android:layout_centerVertical="true"
                                android:paddingTop="@dimen/scale_10dp"
                                android:paddingBottom="@dimen/scale_10dp"
                                android:layout_alignParentStart="true"
                                tools:ignore="RtlSymmetry" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/check"
                                android:src="@drawable/ic_check"
                                android:layout_alignParentEnd="true"
                                android:visibility="visible"
                                app:tint="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:paddingEnd="@dimen/scale_22dp"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_2dp"
                            android:id="@+id/btnTimes"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/after_number_of_times"
                                android:id="@+id/txtTimes"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textSize="@dimen/text_size_16sp"
                                android:textColor="@color/darkGrey"
                                android:paddingStart="@dimen/scale_22dp"
                                android:layout_centerVertical="true"
                                android:paddingTop="@dimen/scale_10dp"
                                android:paddingBottom="@dimen/scale_10dp"
                                android:layout_alignParentStart="true"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/times"
                                android:text="10"
                                android:fontFamily="@font/avenirnext_demibold"
                                android:textSize="@dimen/text_size_16sp"
                                android:textColor="@color/colorPrimary"
                                android:visibility="invisible"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/scale_22dp"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/scale_2dp"
                            android:id="@+id/btnSpecificDate"
                            android:background="@color/white">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/on_a_specific_date"
                                android:id="@+id/txtSpecificDate"
                                android:fontFamily="@font/avenirnext_regular"
                                android:textSize="@dimen/text_size_16sp"
                                android:textColor="@color/darkGrey"
                                android:paddingStart="@dimen/scale_22dp"
                                android:layout_centerVertical="true"
                                android:paddingTop="@dimen/scale_10dp"
                                android:paddingBottom="@dimen/scale_10dp"
                                android:layout_alignParentStart="true"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/specificDate"
                                android:text="26/08/2021"
                                android:fontFamily="@font/avenirnext_demibold"
                                android:textSize="@dimen/text_size_16sp"
                                android:textColor="@color/colorPrimary"
                                android:visibility="invisible"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/scale_22dp"
                                tools:ignore="RtlSymmetry" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/scale_20dp"
                android:paddingEnd="@dimen/scale_20dp"
                android:layout_marginTop="@dimen/scale_10dp"
                android:layout_marginBottom="@dimen/scale_20dp"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/scale_50dp"
                    android:layout_height="@dimen/scale_50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_grey_rectangle_background"
                    android:backgroundTint="@color/lightBlue"
                    android:src="@drawable/ic_chevron_left" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scale_60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/scale_12dp"
                    android:layout_toEndOf="@id/btnBack"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/avenirnext_demibold"
                    android:letterSpacing="0.00"
                    android:text="@string/done"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_16sp"
                    app:cornerRadius="@dimen/scale_7dp" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</layout>
